{
	"extends": ["./tsconfig.json", "@n8n/typescript-config/tsconfig.build.json"],
	"compilerOptions": {
		"outDir": "dist",
		"tsBuildInfoFile": "dist/build.tsbuildinfo"
	},
	"include": [
		"credentials/**/*.ts",
		"nodes/**/*.ts",
		"nodes/**/*.json",
		"credentials/translations/**/*.json",
		"types/**/*.ts",
		"utils/**/*.ts"
	],
	"exclude": ["nodes/**/*.test.ts", "credentials/**/*.test.ts", "utils/**/*.test.ts", "test/**"]
}
